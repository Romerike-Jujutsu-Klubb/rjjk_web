@import "bootstrap";
@import "includes/bootstrap_adaption";
@import "chosen";
@import "includes/bootstrap-chosen";
@import "rails_bootstrap_forms";
@import 'pc-bootstrap4-datetimepicker/build/css/bootstrap-datetimepicker';
@import 'nprogress';
@import 'nprogress-bootstrap';
@import 'bootstrap-fileinput/css/fileinput';
<% if Rails.env.test? %>
@import 'includes/disable_animations';
<% end %>

.md {
  table {
    @extend .table;
  }
}

html {
  height: 100%;
  overflow: hidden;
}

body {
  margin: 0;
  padding: 0;
  perspective: 1px;
  transform-style: preserve-3d;
  height: 100%;
  overflow-y: scroll;
  overflow-x: hidden;
}

body.modal-open {
  overflow: visible;
  position: absolute;
  width: 100%;
  height: 100%;
}

h1 {
  font-size: 250%
}

p {
  font-size: 140%;
  line-height: 150%;
  color: #333;
}

.slide {
  position: relative;
  padding: 10%;
  @media all and (min-height: 992px) {
    padding: 25vh 10%;
  }
  min-height: 100vh;
  width: 100vw;
  box-sizing: border-box;
  box-shadow: 0 -1px 10px rgba(0, 0, 0, .7);
  transform-style: inherit;
}

.slide:not(.header):not(footer) img {
  @extend .d-lg-block;
  position: absolute;
  top: 67%;
  left: 67%;
  width: 320px;
  height: 240px;
  transform: translateZ(.4px) scale(.6) translateX(-104%) translateY(-40%) rotate(-5deg);
  padding: 10px;
  border-radius: 5px;
  background: rgba(240, 230, 220, .7);
  box-shadow: 0 0 8px rgba(0, 0, 0, .7);
}

@media all and (min-width: 992px) {
  .slide:not(.header):not(footer) img {
    top: 50%;
    left: 35%;
  }
}

@media all and (min-width: 992px) {
  .slide:not(.header):not(footer):nth-of-type(2n) img {
    right: 0;
    left: unset;
  }
}

@media all and (min-width: 1440px) {
  .slide:not(.header):not(footer):nth-of-type(2n) img {
    right: 10%;
  }
}

.slide:not(.header):not(footer) img:first-of-type {
  transform: translateZ(.25px) scale(.75) translateX(-94%) translateY(-100%) rotate(2deg);
}

body:not(.modal-open) .slide.header img {
  transform: translateZ(.4px) scale(.6) translateY(-3rem);
}

.slide:before {
  content: "";
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0;
  box-shadow: 0 0 8px 1px rgba(0, 0, 0, .7);
}

.slide:nth-of-type(2n):before {
  left: 0;
}

.title {
  @extend .col-lg-6;
  @extend .col-xl-7;
  @extend .position-static;
  padding: 5%;
  border-radius: 5px;
  background: rgba(240, 230, 220, .7);
  box-shadow: 0 0 8px rgba(0, 0, 0, .7);
}

.slide:not(.header):nth-child(2n+1) {
  z-index: 2;
}

.slide:nth-child(2n) .title {
  margin-left: 0;
  margin-right: auto;
}

.slide:nth-child(2n+1) .title {
  margin-left: auto;
  margin-right: 0;
}

.slide, .slide:before {
  background: 50% 50% / cover;
}

.header {
  text-align: center;
  font-size: 175%;
  color: #fff;
  text-shadow: 0 2px 2px #000;
}

#title {
  z-index: 2;
}

body:not(.modal-open) #title h1, h2 {
  transform: translateZ(.25px) scale(.75);
  transform-origin: 50% 100%;

}

#footer {
  background: #222;
}
