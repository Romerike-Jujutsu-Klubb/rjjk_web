@import "bootstrap/scss/bootstrap";
@import "includes/bootstrap_adaption";
@import "chosen";
@import "includes/bootstrap-chosen";
@import "rails_bootstrap_forms";
@import 'pc-bootstrap4-datetimepicker/build/css/bootstrap-datetimepicker';
@import 'bootstrap-fileinput/css/fileinput';
<% if Rails.env.test? %>
@import 'includes/disable_animations';
<% end %>

#navbar {
  transition: opacity 0.5s, top 0.3s; /* Transition effect when hiding/showing */
  position: sticky;
}

.md {
  table {
    @extend .table;
  }
}

html {
  height: 100%;
  overflow: hidden;
}

body {
  margin: 0;
  padding: 0 0 0 0;
  perspective: 1px;
  transform-style: preserve-3d;
  height: 100%;
  overflow-y: scroll;
  overflow-x: hidden;

  &.modal-open {
    overflow: visible;
    position: absolute;
    width: 100%;
    height: 100%;
  }

  &:not(.wide) .container-md {
    padding-top: 2rem;
  }
}

h1 {
  font-size: 250%
}

p {
  font-size: 140%;
  line-height: 150%;
  color: #333;
}

@import 'includes/slides';

#footer {
  background: #222;
}
