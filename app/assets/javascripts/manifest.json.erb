<% icon_sizes = Rails.configuration.serviceworker.icon_sizes %>
<% suffix = (" #{Rails.env.upcase}" unless Rails.env.production?) %>
{
  "name": "Romerike Jujutsu Klubb<%=suffix%>",
  "short_name": "RJJK<%=suffix%>",
  "start_url": "/",
  "scope": "/",
  "icons": [
  <% icon_sizes.each.with_index do |dim, i| %>
    {
      "src": "<%= "/icon/#{dim}.png" %>",
      "sizes": "<%= dim %>x<%= dim %>",
      "type": "image/png",
      "purpose": "any"
    }<%= i == (icon_sizes.length - 1) ? '' : ',' %>
  <% end %>
  ],
  "theme_color": "#000000",
  "background_color": "#F7F7F7",
  "display": "standalone",
  "orientation": "any"
}
