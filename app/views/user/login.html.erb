<div title="<%= title_helper %>" class="form">
  <%= head_helper 'Venligst logg inn' %>

  <div class="form-padding">
    <%= form_tag(url_for(:action => "#{controller.action_name}")) do %>
        <table width="100%">
          <tr class="two_columns">
            <td class="prompt"><label>Brukernavn</label></td>
            <td class="value"><%= text_field 'user', 'login', :style => 'width: 14em;' %> <small>e-post eller NKF medlemsnr</small></td>
          </tr>
          <tr class="two_columns">
            <td class="prompt"><label>Passord</label></td>
            <td class="value"><%= password_field 'user', 'password', :style => 'width: 14em;' %></td>
          </tr>
          <tr class="two_columns">
            <td><label for="remember_me">Husk meg</label></td>
            <td><%= check_box_tag 'remember_me' %></td>
          </tr>
        </table>

        <div class="button-bar">
          <%= submit_tag 'Logg inn' %>
          <%= link_to 'Registrer deg', :action => 'signup' %> |
          <%= link_to 'Glemt passord', :action => 'forgot_password' %>      </div>
    <% end %>
  </div>
</div>

<%= javascript_tag do %>
    $('#user_login').focus();
<% end %>
