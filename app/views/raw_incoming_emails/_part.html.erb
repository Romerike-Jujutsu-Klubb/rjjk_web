<% if part.multipart? %>
<pre>
<%= part.header %>
</pre>
    <% part.parts.each do |sub_part| %>
        <%= render 'part', part: sub_part %>
    <% end %>
<% else %>
<pre>
<%= part.header %>
<%= part.decoded.# force_encoding('ASCII').
    encode('utf-8', :invalid => :replace, :undef => :replace, :replace => '?') %>
</pre>
<% end %>
