  <div class="form-group">
    <%= f.label :system %>
    <%= f.text_field :system, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :rank_id %>
    <%= f.select :rank_id, @ranks.to_options, {prompt:'Velg grad'}, class: 'form-control' %>
  </div>
  <div class="actions">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
