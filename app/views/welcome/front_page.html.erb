<style>
  @media (max-height: 412px) {
    #event-splash-top {
      display: none;
    }
  }

  @media (min-height: 413px) {
    #event-splash-top {
      margin-left: 2rem;
      margin-right: 2rem;
    }

    #event-splash-main {
      display: none;
    }
  }

  #event-splash-top {
    float: left;
    margin-top: 5rem;
    padding: 2rem;
  }

  #event-splash-main {
    box-sizing: border-box;
    padding: 2rem;
    width: 100%;
  }

  .event-splash {
    background-color: rgba(255, 255, 255, .67);
    box-sizing: border-box;
    color: black;
    opacity: 1.0;
    position: relative;
    z-index: 1;
  }

  .event-splash > div {
    position: relative;
    background-color: rgba(255, 255, 255, .8);
    color: black;
    z-index: 1;
    max-width: 100%;
    margin: 0;
    padding: 2rem;
  }

  .event-splash .text-right {
    text-align: right !important;
  }

  .event-splash a.btn {
    display: inline-block;
    font-weight: 400;
    color: #212529;
    text-align: center;
    vertical-align: middle;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    background-color: transparent;
    border: 1px solid transparent !important;
    padding: 0.375rem 0.75rem;
    font-size: 1rem;
    line-height: 1.5;
    border-radius: 0.25rem !important;
    transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out, border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
  }

  .event-splash a.btn-info {
    color: #fff !important;
    background-color: #17a2b8;
    border-color: #17a2b8;
  }

    #footer {
      margin-top: 4rem;
    }
</style>

<div id="event-splash-top" class="event-splash">
  <div>
    <%= render 'layouts/event_main', event: @event, display_year: false, display_month: true, display_times: true %>
  </div>
</div>

<section id="background-wrapper">
  <!-- THE BACKGROUND SLIDER -->
  <article class="cinematic" data-contentholder="#slidercontent-wrapper">
    <!-- SLIDER LIST -->
    <ul>

      <% @front_page_sections.each do |fps| %>
        <!-- A SLIDE ITEM -->
        <li>
          <!-- USE  data-repeatbg="true" for Tiled BG 's -->
          <div class="slide-background-image" data-repeatbg="false" data-repeatbg2="false" data-src="<%= image_path fps.image_id %>"
               data-srcblur="<%= blurred_image_path fps.image_id %>"
               data-width="<%= fps.image.width || 1920 %>"
               data-height="<%= fps.image.height || 1080 %>"></div>
          <section class="slidercontent">
            <h2>
              <a href="<%= information_page_path fps.information_page_id %>" title="<%= fps.title %>"><%= fps.title %></a>
            </h2>
            <div class='hidden-phone'>
              <p class="mainTitleSlider"><%= fps.subtitle %></p>
              <div class="fbuilder_module sliderBtn" style="width:auto" data-shortcode="tp_button" data-modid="0">
                <a href="<%= information_page_path fps.information_page_id %>" class="smoothscroll" target="_self">
                  <button style="color:#ffffff;background-color:#4e89b7;white-space:nowrap!important" class="btn txtshadow fullwidth">
                    <%= fps.button_text %>
                    <i style="float:right;margin-top:1rem;margin-left:1rem" class="fa fa-chevron-right"></i>
                  </button>
                </a>
              </div>
            </div>
          </section>
        </li>
        <!-- END OF A SLIDE ITEM -->
      <% end %>

    </ul>
    <!-- END OF SLIDER LIST -->
  </article>
</section>
<!-- END OF THE BACKGROUND WRAPPER -->

<section id="cinematic-title-wrapper" class="txtshadow empty">
  <!--<div class="single_blurredbg_holder noborder">
          <div class="single_blurredbg"></div>
          <div class="single_bluroverlay"></div>
      </div>-->
  <div class="container">
    <section id="slidercontent-wrapper">

    </section>

    <section id="cinematic-navigation" class="txtshadow">
      <div class="cinematic-left cinematic-navbutton"><i class="fa fa-chevron-left fa-3x"></i></div>
      <div class="cinematic-right cinematic-navbutton"><i class="fa fa-chevron-right fa-3x"></i></div>
      <div class="cinematic-down cinematic-navbutton"><i class="fa fa-chevron-down fa-3x"></i></div>
      <script type="text/javascript">
          $ = jQuery;
          $(".fa-chevron-down").click(function (e) {
              e.stopPropagation();
              $([document.documentElement, document.body]).animate({
                  scrollTop: $("#maincontent").offset().top
              }, 700, "swing");
          });
      </script>
    </section>
  </div>
</section>

<section id="home" class="pagestart"></section>

<section id="maincontent">
  <div id="event-splash-main" class="event-splash">
    <div>
      <%= render 'layouts/event_main', event: @event, display_year: false, display_month: true, display_times: true %>
    </div>
  </div>

  <div class="onepagecontent">
    <section id="home" class="first"></section>
    <div class="clear"></div>
  </div>

  <style>
    #wp-admin-bar-fbuilder_edit, #fbuilder_wrapper.empty {
      display: none
    }
  </style>
  <!-- End Inner -->

  <!-- Hide dublicated text in slider on home page -->
  <script type="text/javascript">
      jQuery(document).ready(function () {
          jQuery('#slidercontent-wrapper').on('DOMNodeInserted', function (e) {
              jQuery('#slidercontent-wrapper p.topTitleSlider').remove();
          });
      });
  </script>
</section>
