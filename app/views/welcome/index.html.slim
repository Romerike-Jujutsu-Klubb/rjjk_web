- if current_user.member && @next_practice&.group_schedule&.group&.current_semester&.chief_instructor_id == current_user.member.id
  - attendees = @next_practice.attendances.map(&:member)
  - active_members = @next_practice.group_schedule.group.members.active.where.not(id: attendees)
  - recent_active_absentees = active_members.absent_since(2.weeks.ago).reject(&:passive_on)
  - recent_passive_absentees = active_members.absent_since(2.months.ago).select(&:passive_on)
