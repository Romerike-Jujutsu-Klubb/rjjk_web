<h3>Venligst logg inn</h3>

<div class="form-padding">
  <%= form_tag(url_for(:action => "#{controller.action_name}")) do %>
      <table class="table">
        <tr>
          <td><label>Brukernavn</label></td>
          <td><%= text_field 'user', 'login', :class => 'form-control', :placeholder => 'e-post' %></td>
        </tr>
        <tr>
          <td><label>Passord</label></td>
          <td valign="top">
            <%= password_field 'user', 'password', :class => 'form-control' %>
          </td>
        </tr>
        <tr>
          <td/>
          <td>
            <label for="remember_me" class="checkbox">
              <%= check_box_tag 'remember_me' %> Husk meg pÃ¥ denne datamaskinen
            </label>
          </td>
        </tr>
        <tr>
          <td>
          </td>
          <td>
            <%= submit_tag 'Logg inn', :class => 'btn btn-primary' %>
            <%= submit_tag 'Glemt passord?', :class => 'btn btn-secondary', :onclick => "form.action = '#{url_for(:action => :forgot_password)}'" %>
            <%= button_tag 'Registrer deg', :class => 'btn btn-secondary', :onclick => "form.action = '#{url_for(:action => :signup)}'" %>
          </td>
        </tr>
      </table>
  <% end %>
</div>

<%= javascript_tag do %>
    $('#user_login').focus();
<% end %>
