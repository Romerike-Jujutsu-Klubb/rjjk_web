.user_password
  = hidden_field :users, :form, value: :change_password

  table.table
    tr.two_columns
      td.prompt
        label Passord
      td.value = password_field :users, :password, class: 'form-control'
    tr.two_columns
      td.prompt
        label Bekreft passord
      td.value = password_field :users, :password_confirmation, class: 'form-control'
    - if submit
      tr
        td
          = submit_tag 'Endre passord', class: 'btn btn-primary'
