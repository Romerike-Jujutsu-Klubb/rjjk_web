<h3>Sign Up</h3>

<div class="form-padding">
  <%= form_tag(url_for(action: "#{controller.action_name}")) do %>
    <%= render 'form', user: @user, submit: false %>
    <%= render 'password', submit: false %>

    <div class="button-bar">
      <%= submit_tag 'Sign up' %>
      <%= back_or_link_to 'Tilbake', '/' %>
    </div>
  <% end %>
</div>
