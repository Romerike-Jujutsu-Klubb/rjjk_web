<div style="float: right; width: 196px; height: 680px; overflow:auto; border: 1px solid black">
  <%= render :partial => '/images/list', :locals => {:images => @images} %>
</div>

<%= render :partial => '/tiny_mce' %>

<%= form_for @information_page do |f| %>
    <%= f.error_messages %>

    <div style="float: left; margin-right: 2em"><label for="information_page_title">Tittel</label>
      <%= f.text_field :title %></div>

    <div style="float: left; margin-right: 2em"><label for="information_page_hidden">Skjul</label>
      <%= f.check_box :hidden %></div>

    <% if @information_page.created_at %>
        <div style="float: left; margin-right: 2em">
          <label for="information_page_created_at">Opprettet</label>
          <%= h @information_page.created_at.strftime('%Y-%m-%d %H:%M') %></div>
    <% end %>

    <% if @information_page.updated_at %>
        <div><label for="information_page_updated_at">Oppdatert</label>
          <%= h @information_page.updated_at.strftime('%Y-%m-%d %H:%M') %></div>
    <% end %>

    <br clear="left"/>

    <p>
      <%= f.text_area :body, :cols => 100, :rows => 30, :class => 'tiny_mce' %>
    </p>

    <%= f.submit 'Lagre', :id => :save, :class => :btn %>
    <%= link_to 'Vis', :action => 'show', :id => @information_page unless @information_page.new_record? %>
    <%= back_or_link_to 'Tilbake', :action => 'list' %>
<% end %>

<%= javascript_tag do %>
    document.getElementById('information_page_title').focus();
    document.getElementById('information_page_title').select();
    $('body').scrollTo(".main");
<% end %>
