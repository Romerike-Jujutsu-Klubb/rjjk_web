<% @title = @information_page.title %>

<h1><%= h @information_page.title %></h1>

<%= @information_page.body.try(:html_safe) %>

<% if admin? %>
    <ul class="controls">
      <li><%= link_to 'Rediger', {:controller => :info, :action => :edit, :id => @information_page}, :class => :edit %></li>
      <li><%= link_to 'Slett', {:controller => :info, :action => :destroy, :id => @information_page}, :class => :edit, data: {confirm: 'Er du sikker?'}, :method => :post %></li>
    </ul>
<% end %>

<%=render 'layouts/modal_image' %>

<%= javascript_tag do %>
    $('.main img').addClass('img-thumbnail').css({cursor: 'pointer'});
    $('.main img').on('click', function() {
      $('#imageModal .modal-title').html($(this).attr('title'));
      $('#modalImage').attr('src', $(this).attr('src').replace("inline", "show"));
      $('#imageModal').modal();
    });
<% end %>
