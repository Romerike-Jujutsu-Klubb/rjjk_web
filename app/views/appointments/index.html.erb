<% @appointments.each do |appointment| %>
  <tr>
    <td><%= appointment.member.name %></td>
    <td><%= detour_to appointment.role.name, appointment.role %></td>
    <td><%= appointment.from %></td>
    <td><%= appointment.to %></td>
    <td><%= link_to 'Rediger', edit_appointment_path(appointment) %></td>
    <td><%= link_to 'Slett', appointment, method: :delete, data: { confirm: 'Er du sikker?' } %></td>
  </tr>
<% end %>
</table>

