<h1>Hei <%= @recipient.first_name %>!</h1>

<% if @new_attendees.any? %>
    <h3>Nylig påmeldt</h3>

    <ul>
      <% @new_attendees.each do |m| %>
          <li><%= m.name %></li>
      <% end %>
    </ul>
<% end %>

<% if @new_absentees.any? %>
    <h3>Avmelding</h3>
    <ul>
      <% @new_absentees.each do |m| %>
          <li><%= m.name %></li>
      <% end %>
    </ul>
<% end %>

<% unless @practice.message.blank? %>
    <h3>Plan for treningen</h3>
    <p><%= @practice.message %></p>
<% end %>

<% if @attendees.any? && @attendees != @new_attendees %>
    <h3><%= @attendees.size %> deltakere påmeldt</h3>
    <ul>
      <% @attendees.sort_by(&:name).each do |m| %>
          <li><%= m.name %></li>
      <% end %>
    </ul>
<% end %>

<p>
  Du kan se på og endre din påmelding
  på <%= link_to 'Mitt oppmøte', @email_url %>.
</p>
