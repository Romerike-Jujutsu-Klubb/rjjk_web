<%= form_for(@role) do |f| %>
    <% if @role.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@role.errors.count, "error") %> prohibited this role
            from being saved:</h2>

          <ul>
            <% @role.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name, 'Navn' %><br/>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :years_on_the_board, 'År i styret' %><br/>
      <%= f.select :years_on_the_board, [['Sitter ikke i styret', nil], ['1 år', 1], ['2 år', 2]], {}, class: 'form-control' %>
    </div>
    <div class="actions">
      <%= f.submit 'Lagre', class: 'btn btn-primary' %>
      <%= back_or_link_to 'Tilbake', roles_path, class: 'btn btn-default' %>
    </div>
<% end %>
