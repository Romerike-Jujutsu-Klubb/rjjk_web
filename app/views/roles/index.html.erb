<%= link_to 'New Job position', new_role_path, class: 'btn btn-primary pull-right' %>
<h1>Listing roles</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Years on the board</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @roles.each do |role| %>
  <tr>
    <td><%= role.name %></td>
    <td align="center"><%= role.years_on_the_board %></td>
    <td><%= link_to 'Rediger', edit_role_path(role) %></td>
    <td><%= link_to 'Slett', role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
