    <div class="field">
      <%= f.label :end_on, 'Til' %>
      <%= f.datepicker :end_on,
                       :dateFormat => 'yy-mm-dd', :firstDay => 1, :size => 18 %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
