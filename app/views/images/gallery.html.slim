- if @image
  - if @image.video?
    = video_tag url_for(:controller => :images, :action => :show, :id => @image.id, :format => @image.format), :title => @image.name || 'Film', :controls => true, :autobuffer => true, :style => 'width: 100%'
  - else
    = image_tag url_for(controller: :images, action: :inline, id: @image.id, format: @image.format, width: 762), title: @image.name || 'Bilde', class: 'img-thumbnail col-12 p-1'

  .w-100 align="center"
    = @image.description || @image.name
    | av #{@image.user.name}
    br
    ul.controls.pb-0
      li = link_to 'Godkjenn', {:controller => :images, :action => :update, :id => @image.id, :image => {:approved => true}}, :method => :put if admin? && !@image.approved?
      li = link_to @image.public? ? 'Skjul' : 'Publiser', {:controller => :images, :action => :update, :id => @image.id, :image => {:public => !@image.public?}}, :method => :put if admin?
      li = link_to 'Liker', {:controller => :users, :action => :like, :id => @image.id}, :method => :post if user? && !@image.likers.include?(current_user)
