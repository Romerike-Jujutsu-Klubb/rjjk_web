							<li><a href="<%=url_for :action => :show, :id => @news_item %>" class="more">Read More</a></li>				
-->
							<% if user? %>
							<li><a href="<%=url_for :action => :edit, :id => @news_item %>" class="edit">Redigèr</a></li>				
							<li><%=link_to 'Slett', {:action => :destroy, :id => @news_item}, :class => :edit, :confirm => 'Er du sikker?', :method => :post %></li>				
							<% end %>
						</ul>

					</div>
				</div>
                <% end %>

				<!-- Primary content area end -->
			</div>
		</div>

		
		<!-- Secondary content: Stuff that goes in the secondary content column (by default, the narrower right column) -->
		<div id="secondarycontent">
