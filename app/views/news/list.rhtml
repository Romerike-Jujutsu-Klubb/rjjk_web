<% if not @news_items.empty? %>
    <% @news_item = @news_items[0] %>
		<!-- Normal content: Stuff that's not going to be put in the left or right column. -->
		<div id="normalcontent" class="post">
			<h3><%=h @news_item.title%></h3>
			<div class="contentarea">
				<div class="details">
				<%="Skrevet av #{@news_item.creator.name}" if @news_item.creator%></a>
   				<%=@news_item.created_at.strftime '%Y-%m-%d'%>
				</div>	
				<!-- Normal content area start -->
				<%=textilize @news_item.body %>

						<ul class="controls">
<!--
							<li><a href="#" class="printerfriendly">Printer Friendly</a></li>
