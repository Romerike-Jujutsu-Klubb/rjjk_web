							<li><a href="<%=url_for :action => :show, :id => @news_item %>" class="more">Read More</a></li>				
-->
							<% if user? %>
							<li><a href="<%=url_for :action => :edit, :id => @news_item %>" class="edit">Redigèr</a></li>
							<li><%=link_to 'Slett', {:action => :destroy, :id => @news_item}, :class => :edit, :confirm => 'Er du sikker?', :method => :post %></li>				
							<% end %>
						</ul>

				<!-- Normal content area end -->
			</div>
		</div>

	
		<div class="divider1"></div>


		<!-- Primary content: Stuff that goes in the primary content column (by default, the left column) -->
		<div id="primarycontainer">
			<div id="primarycontent">
				<!-- Primary content area start -->

                <% @news_items[1..5].each_with_index do |@news_item, i| %>		
                <% if i > 0 %>
				<div class="divider2"></div>
                <% end %>		
				<div class="post">
					<h4><%=h @news_item.title %></h4>
					<div class="contentarea">
