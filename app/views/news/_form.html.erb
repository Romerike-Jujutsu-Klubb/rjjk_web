<% @content_width = 1024 %>

<div class="row">

  <div class="col-md-9">
    <%= tinymce %>

    <%= form_for @news_item, :html => {:role => 'form'} do |f| %>
        <%= f.error_messages %>

        <div class="row">
          <div class="form-group col-md-12">
            <%= f.label :title, 'Tittel' %>
            <%= f.text_field :title, :class => 'form-control' %>
          </div>
        </div>

        <div class="row">
          <div class="form-group col-md-3">
            <%= f.label :publication_state, 'Publiseringsstatus' %>
            <%= f.select :publication_state, NewsItem::PublicationState.constants.map { |s| [t(s.downcase), s] },
                    {}, :class => 'form-control' %>
          </div>

          <div class="form-group col-md-3">
            <%= f.label :publish_at, 'Publiser fra' %>
            <%= f.text_field :publish_at, value: @news_item.publish_at.try(:strftime, '%F %R'), class: 'datetime form-control' %>
          </div>

          <div class="form-group col-md-3">
            <%= f.label :expire_at, 'til' %>
            <%= f.text_field :expire_at, value: @news_item.expire_at.try(:strftime, '%F %R'), class: 'datetime form-control' %>
          </div>
        </div>

        <p>
          Sammendrag
          <%= f.text_area :summary, :class => :tinymce, :style => 'height: 120px' %>
          <%= javascript_tag do %>
              $(window).load(function () {
              tinyMCE.DOM.setStyle(tinyMCE.DOM.get('news_item_summary_ifr'), 'height', '120px');
              })
          <% end %>
        </p>

        <p>
          Mer informasjon (valgfritt)
          <%= f.text_area :body, :class => :tinymce %>
        </p>

        <%= f.submit 'Lagre', :id => :save, :class => 'btn btn-default' %>
        <%= back_or_link_to 'Avbryt', :action => 'list' %>

    <% end %>
  </div>
  <div class="col-md-3">
    <div style="float: right; width: 196px; height: 680px; overflow:auto; border: 1px solid black">
      <%= render :partial => '/images/list', :locals => {:images => @images} %>
    </div>
  </div>

</div>

<%= javascript_tag do %>
    $('#news_item_title').focus();
    $('#news_item_title').select();
<% end %>
