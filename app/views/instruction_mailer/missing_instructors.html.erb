<% @semesters.each do |s, instructions| %>
    <h3>
      <% if s.start_on <= Date.today %>
          Dette semesteret
      <% else %>
          Neste semester
      <% end %>
      (<%= s.name %>)
    </h3>

    <table>
      <tr>
        <th>Gruppe</th>
        <th>Dag</th>
      </tr>
      <% instructions.each do |gi| %>
          <tr>
            <td><%= link_to gi.group_schedule.group.name, :only_path => false, :controller => :group_instructors,
                            :action => :new, :group_instructor => {
                            :group_schedule_id => gi.group_schedule_id, :semester_id => gi.semester_id} %></td>
            <td><%= gi.group_schedule.weekday_name %></td>
          </tr>
      <% end %>
    </table>
<% end %>
