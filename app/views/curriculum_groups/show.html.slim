.float-right
  a.btn.btn-warning> href=card_pdf_curriculums_path
    i.fa.fa-list>
    | Ferdighetskort
  - if admin? || instructor? || technical_committy?
    a.btn.btn-primary href=edit_curriculum_group_path(@curriculum_group)
      i.fa.fa-edit>
      | Endre

h2 Pensum #{@curriculum_group.name}

table.table.table-sm
  thead
    tr
      th.text-left Grad
      th Kort
      th PDF
      th.text-center Måneder
      th.text-center Minste alder
  tbody
    - for rank in @ranks
      tr
        td = link_to "#{rank.label}", rank
        td
          => link_to 'PDF', card_pdf_rank_path(rank)
          ' /
          = link_to 'HMTL', card_rank_path(rank)
        td = link_to 'PDF', pdf_rank_path(rank)
        td.text-center = rank.standard_months
        td.text-center #{rank.minimum_age} år
