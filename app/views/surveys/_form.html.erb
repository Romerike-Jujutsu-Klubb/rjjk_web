<%= form_for(@survey) do |f| %>
    <% if @survey.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@survey.errors.count, "error") %> prohibited this
            survey from being saved:</h2>

          <ul>
            <% @survey.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :title, 'Tittel (vises i e-post og svarsiden.)' %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :category, 'Kategori (aktiv/passiv/utmeldt)' %>
          <%= f.text_field :category, class: 'form-control' %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :group_id %>
          <%= f.number_field :group_id, class: 'form-control' %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :position %>
          <%= f.number_field :position, class: 'form-control' %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :expires_at %>
          <%= f.text_field :expires_at, class: 'form-control datetime' %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :header, 'Innledning (vises i e-post og svarsiden)' %>
      <%= f.text_area :header, class: 'form-control expanding' %>
    </div>
    <div class="form-group">
      <%= f.label :footer, 'Oppsummering (vises etter besvarelse)' %>
      <%= f.text_area :footer, class: 'form-control expanding' %>
    </div>

    <div class="actions">
      <%= f.submit 'Lagre', class: 'btn btn-primary' %>
    </div>
<% end %>
