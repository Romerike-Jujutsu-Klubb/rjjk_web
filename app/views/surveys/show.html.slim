p#notice = notice

.row
  .col-md-3
    strong Category:
    = @survey.category
  .col-md-3
    strong Group:
    = @survey.group_id
  .col-md-3
    strong Position:
    = @survey.position
  .col-md-3
    strong Expires at:
    = @survey.expires_at

h3.mt-3 Overskrift:
h4 = @survey.title

h3.mt-3 Innledning:
= @survey.header

h3.mt-3 Spørsmål

- @survey.survey_questions.order(:position).each do |sq|
  p
    div = sq.title
    - answer_hash = Hash.new(0)
    - sq.survey_answers.map(&:answers).each do |answers|
      - answers.each{|k,v| answer_hash[k] += 1}
    - answer_hash = answer_hash.sort_by(&:second).reverse
    - answer_hash.each do |answer, count|
      span.badge.badge-info> = "#{answer}: #{count}"
    = pie_chart answer_hash

.row
  .col-md-12
    h3 Avslutning:
    = @survey.footer

.mt-3
  = link_to 'Back', surveys_path, class: 'btn btn-link'
  = link_to 'Edit', edit_survey_path(@survey), class: 'btn btn-primary'

table.table.table-sm.mt-3
  thead
    tr
      th Navn
      th Innmeldt
      th Aktiv
      th Spurt
      th Minnet på
      th Fullført
      th Svar
  tbody
    - (@survey.included_members.select(&:active?) + @survey.survey_requests.map(&:member)).uniq.sort_by(&:joined_on).each do |m|
      - survey_request = @survey.survey_requests.find { |sr| sr.member_id == m.id }
      tr
        td = m.name
        td = m.joined_on
        td = m.active?
        td = survey_request&.sent_at&.to_date
        td = survey_request&.reminded_at&.to_date
        td = survey_request&.completed_at&.to_date
        td
          - if survey_request&.survey_answers&.size&.positive?
            = link_to survey_request.survey_answers.size, survey_request
