<h1>Listing surveys</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Group</th>
      <th>Title</th>
      <th>Position</th>
      <th>Expires at</th>
      <th>Header</th>
      <th>Footer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @surveys.each do |survey| %>
      <tr>
        <td><%= survey.category %></td>
        <td><%= survey.group_id %></td>
        <td><%= survey.title %></td>
        <td><%= survey.position %></td>
        <td><%= survey.expires_at %></td>
        <td><%= survey.header %></td>
        <td><%= survey.footer %></td>
        <td><%= link_to 'Show', survey %></td>
        <td><%= link_to 'Edit', edit_survey_path(survey) %></td>
        <td><%= link_to 'Destroy', survey, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

