.btn-group.mt-2 data-toggle="buttons"
  label.btn.btn-sm.p-2 class=("btn-#{'outline-' unless state}success")
    = true_label
    input.ml-1 type="radio" name=field_name id="#{field_id}_true" value=:true checked=state
  label.btn.btn-sm.p-2 class=("btn-#{'outline-' unless state == false}danger")
    input.mr-1 type="radio" name=field_name id="#{field_id}_false" value=:false checked=(state == false)
    = false_label
