.header
  - if flash[:notice]
    .fixed-bottom.mx-3.text-left style='position: absolute;font-size:1rem;line-height:1.5'
      .alert.alert-warning.alert-dismissible.fade.show role="alert"
        button.close type="button" data-dismiss="alert" aria-label="Close"
          span aria-hidden="true" &times;
        = textalize flash[:notice]
  i#navBtn.fa.fa-navicon.btn.btn-secondary.m-2.float-left
  i#calendarBtn.fa.fa-calendar.btn.btn-secondary.m-2.float-left class=('d-lg-none' unless @content_width)

  .d-none.d-md-block.mt-md-5.mb-1 Romerike Jujutsu Klubb

  .buttons.mt-2.mt-md-0
    - if user?
      = link_to 'Gruppe', 'https://www.facebook.com/groups/romerikejjk', onclick: 'return !window.open(this.href)', \
                style: "padding-left:2.7em;background-image: url(#{asset_path('facebook.png')}); background-repeat:no-repeat;background-origin:padding-box;background-position: 0.5em;background-size: 24px 24px"
    = link_to 'Facebook', 'http://www.facebook.com/home.php#!/pages/Romerike-Jujutsu-Klubb/260684570923?ref=ts', onclick: 'return !window.open(this.href)'
    - unless current_user&.member
      = link_to 'Pr√∏v oss!', 'http://nkfwww.kampsport.no/portal/page/portal/ks_utv/ks_bli_medlem?p_o3_pk_id=162', onclick: 'return !window.open(this.href)'

javascript:
    $('#navBtn').on('click', function () {
        console.log('menu clicked');
        $('.subnav').css('transform', 'translate(0px, 0)');
        $('#shades').css('transition', 'visibility 0s, opacity 0.5s');
        $('#shades').css('visibility', 'visible').css('opacity', '0.5');
    });
    $('#shades').on('click', function () {
        console.log('shades clicked');
        $('.subnav').css('transform', 'translate(-160px, 0)');
        $('#shades').css('opacity', '0');
        $('#shades').css('transition', 'visibility 0.5s, opacity 0.5s');
        $('#shades').css('visibility', 'hidden');
    });

