- chart_width = column_width_sm
- if !Rails.env.development? && !Rails.env.production?
  - history_chart_link = image_tag(member_reports_history_graph_path(format: :png, size: chart_width), title: 'Historikk graf', class: 'rounded', lazy: true)
  - attendance_chart_link = image_tag(url_for(controller: :attendances, action: :history_graph, format: :png, size: chart_width), title: 'Oppmøte graf', class: 'rounded', lazy: true)
  - grades_chart_link = image_tag(member_reports_grade_history_graph_path(format: :png, size: chart_width), title: 'Historikk over grader', class: 'rounded', lazy: true)
  - age_chart_link = image_tag(member_reports_age_chart_path(format: :png, size: chart_width), title: 'Aldersfordeling', class: 'rounded', lazy: true)
  - good_attendance_chart_link = image_tag(member_reports_grade_history_graph_percentage_path(format: :png, size: chart_width, percentage: 33, step: 28, interval: 92), title: 'Jevnt oppmøte voksne per grad', class: 'rounded', lazy: true)
- else
  - history_chart_link = 'Medlemshistorikk'
  - attendance_chart_link = 'Oppmøte'
  - grades_chart_link = 'Historikk over grader'
  - age_chart_link = 'Aldersfordeling'
  - good_attendance_chart_link = 'Jevnt oppmøte voksne'

.mb-3
  = link_to history_chart_link, member_reports_path
  br
  = link_to attendance_chart_link, controller: :attendances, action: :report
  br
  = link_to grades_chart_link, member_reports_grade_history_graph_path(format: :png, size: 800)
  br
  = link_to age_chart_link, member_reports_age_chart_path(format: :png, size: 800)
  br
  = link_to good_attendance_chart_link, member_reports_grade_history_graph_percentage_path(format: :png, size: 800, percentage: 33, step: 28, interval: 92)
  br
