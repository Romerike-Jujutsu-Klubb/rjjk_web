= render layout: 'layouts/modal', locals: { id: :imageModal } do
  img id="modalImage" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAYAAAAfFcSJAAAAAXNSR0IArs4c6QAAAARnQU1BAACxjwv8YQUAAAAJcEhZcwAADsQAAA7EAZUrDhsAAAANSURBVBhXYzh8+PB/AAffA0nNPuCLAAAAAElFTkSuQmCC" style="max-width: 100%; max-height: 100%" alt='modal image'

javascript:
    $('.main img').addClass('img-thumbnail').css({cursor: 'pointer'});
    $('.main img').on('click', function () {
        $('#imageModal .modal-title').html($(this).attr('title'));
        $('#modalImage').attr('src', $(this).attr('src').replace("inline", "show"));
        $('#imageModal').modal();
    });
