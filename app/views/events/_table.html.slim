  - for event in events
    tr
      td = link_to event.name, event
      td nowrap="true" = h event.start_at.to_date
      td nowrap="true" = h event.end_at&.to_date
      td
        = link_to 'Endre', edit_event_path(event)
        = link_to 'Slett', event, data: { confirm: 'Er du sikker pÃ¥ at du vil endre denne hendelsen?' }, method: :delete
    tr
      td colspan="4" = event.ingress
