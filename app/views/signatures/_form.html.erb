<%= form_for(@signature, :html=> {:multipart=>true}) do |f| %>
  <% if @signature.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@signature.errors.count, "error") %> prohibited this signature from being saved:</h2>

      <ul>
      <% @signature.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :member_id %><br />
    <%= f.select :member_id, @members.map{|m| [m.name, m.id]}, :prompt => true %>
  </div>
  <div class="field">
    <%= f.file_field :file, :accept => 'image/*' %>
  </div>
  <div class="actions">
    <%= f.submit 'Lagre', :class => :btn%>
    <%= back_or_link_to 'Tilbake', signatures_path %>
  </div>
<% end %>
