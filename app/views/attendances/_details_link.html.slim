- if practice
  - attendances = practice.attendances.select { |a| Attendance::PRESENCE_STATES.include?(a.status) }
  - absences = practice.attendances.select { |a| Attendance::ABSENT_STATES.include?(a.status) }
  - others = attendances.select { |a| a.member_id != current_user.member.id }
  - if others.size >= 2
    - others = others.sort_by { |a| a.member.current_rank || Rank::UNRANKED }.reverse
  - attendance = practice.attendances.find { |a| a.member_id == current_user.member.id }
  - if attendances.any?
    - if attendances.size > 2
      a data-toggle="modal" data-target="#attendance_details_#{practice.id}" href="#" title="#{practice.passed? ? 'Oppmøte' : 'Påmeldt til'} trening #{t("date.day_names")[practice.group_schedule.weekday % 7].downcase} #{practice.date.day}. #{t("date.month_names")[practice.date.mon].downcase}"
        - if attendance.present?
          ' Du
        - else
          => others.shift.member.first_name
        ' og
        = others.size == 1 ? others.first.member.first_name : "#{others.size} andre"
      = render 'layouts/modal', id: "attendance_details_#{practice.id}"
        .text-center: i.fa.fa-spinner.fa-pulse.fa-5x.my-5
      javascript:
          $(function () {
              $("#attendance_details_#{practice.id}").on('show.bs.modal', function (e) {
                  $(this).find('.modal-body').load('#{practice_details_attendance_path practice}')
              });
          });
    - elsif attendance.present?
      ' Du
      - if others.any?
        ' og
        = others.first.member.first_name
    - elsif others.any?
      => others.shift.member.first_name
      - if others.any?
        ' og
        = others.first.member.first_name
    - else
      ' Ingen
    =< practice.passed? ? 'trente' : 'kommer'
    ' .
    / TODO(uwe): Avoid duplicate modals!  Maybe lazy load the content?
    - if request.xhr?
      = yield :modals