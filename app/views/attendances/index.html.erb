<h1>Listing attendances</h1>

<table border="1" width="100%"  >
  <tr>
    <th>Dato</th>
    <th>Gruppe</th>
  </tr>

<% for attendance in @attendances %>
  <tr>
    <td><%=attendance.date %></td>
    <td><%=attendance.group_schedule.group.name %></td>
    <td><%= link_to 'Show', attendance %></td>
    <td><%= link_to 'Edit', edit_attendance_path(attendance) %></td>
    <td><%= link_to 'Destroy', attendance, :data => {:confirm => 'Are you sure?'}, :method => :delete %></td>
  </tr>
<% end %>
  <tr>
    <th>Totalt:</th>
    <th><%= @attendances.size %></th>
  </tr>
</table>

<br />

<%= link_to 'New attendance', new_attendance_path %>
