    <%= f.label :waza_id %><br />
    <%= f.select :waza_id, @wazas.to_options, prompt:'Velg waza' %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :rank_id %><br />
    <%= f.select :rank_id, @ranks.to_options, {}, prompt: 'Velg grad' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
