<%= form_for(@basic_technique) do |f| %>
  <% if @basic_technique.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@basic_technique.errors.count, "error") %> prohibited this basic_technique from being saved:</h2>

      <ul>
      <% @basic_technique.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
