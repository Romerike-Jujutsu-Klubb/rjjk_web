.card-body.p-0.pt-3.p-sm-3
  .table-responsive
    table.table.mb-0 class=('table-sm' if members.size > 12)
      - members.each do |m|
        - attendance = selected_practice.attendance_for(m.id)
        tr class=("table-danger" if !m.absent? && m.absent?(days: 14))
          td
            - if m.user.card_key
              i.fa.fa-key
          td
            = link_to m.name, m.user
            - if m.absent?(days: 14)
              br
              = m.attendances.last&.date || 'OppmÃ¸te ikke registret'
          td = render 'attendances/button', attendance: attendance, member_id: m.id
