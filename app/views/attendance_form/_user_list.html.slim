.card-body.p-0.pt-3.p-sm-3
  .table-responsive
    table.table.mb-0 class=('table-sm' if users.size > 12)
      - users.each do |u|
        - attendance = selected_practice.attendance_for(u.id)
        tr class=("table-danger" if u.attending? && u.absent?(days: 14))
          td
            - if u.card_key
              i.fa.fa-key
          td
            = link_to u.name, u
            - if u.absent?(days: 14)
              br
              = u.attendances.last&.date || 'OppmÃ¸te ikke registret'
          td = render 'attendances/button', attendance: attendance, user_id: u.id
