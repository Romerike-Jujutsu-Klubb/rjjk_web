<%= form_for(@election) do |f| %>
  <% if @election.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@election.errors.count, "error") %> prohibited this election from being saved:</h2>

      <ul>
      <% @election.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :annual_meeting_id, 'Årsmøte' %><br />
    <%= f.select :annual_meeting_id, options_from_collection_for_select(@annual_meetings, :id, :date, @election.annual_meeting_id), {}, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :role_id, 'Stilling' %><br />
    <%= f.select :role_id, options_from_collection_for_select(@roles, :id, :name, @election.role_id), {}, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :member_id, 'Medlem' %><br />
    <%= f.select :member_id, options_from_collection_for_select(@members, :id, :name, @election.member_id), {}, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :resigned_on, 'Trukket seg' %>
    <%= f.datetime_picker :resigned_on, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit 'Lagre', class: 'btn btn-primary' %>
    <%= link_to 'Vis', @election %> |
    <%= link_to 'Tilbake', elections_path %>
  </div>
<% end %>
