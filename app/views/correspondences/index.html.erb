<% @correspondences.each do |correspondence| %>
  <tr>
    <td><%= correspondence.sent_at %></td>
    <td><%= correspondence.member_id %></td>
    <td><%= correspondence.related_model_id %></td>
    <td><%= link_to 'Show', correspondence %></td>
    <td><%= link_to 'Edit', edit_correspondence_path(correspondence) %></td>
    <td><%= link_to 'Destroy', correspondence, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

