<h1>Oppm√∏telister</h1>

<ul>
<% for group in @groups %>
    <li>
    	<%="#{h group.martial_art.name} #{h group.name}"%>
    	<%=link_to "#{Date::MONTHNAMES[Date.today.mon]}", :action => :attendance_form, :group_id => group.id%>
    	<%=link_to "#{Date::MONTHNAMES[Date.today.month > 1 ? Date.today.mon - 1 : 12]}", :action => :attendance_form, :group_id => group.id, :date => Date.new(Date.today.month > 1 ? Date.today.year : Date.today.year - 1, Date.today.month > 1 ? Date.today.month - 1 : 12).strftime('%Y-%m')%>
    	<%=link_to "#{Date::MONTHNAMES[Date.today.month < 12 ? Date.today.mon + 1 : 1]}", :action => :attendance_form, :group_id => group.id, :date => Date.new(Date.today.month < 12 ? Date.today.year : Date.today.year + 1, Date.today.month < 12 ? Date.today.month + 1 : 1).strftime('%Y-%m')%>
    </li>
<% end %>
    <li>
    	<%=link_to "Andre", :action => :attendance_form, :group_id => 'others' %>
	</li>
</ul>
