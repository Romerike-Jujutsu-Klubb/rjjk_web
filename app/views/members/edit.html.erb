<% @content_width = 1024 %>

<%= form_tag({:action => 'update', :id => @member}, {:multipart => true, :method => :put}) do %>

    <ul class="nav nav-tabs">
      <li class="active"><a href="#tab_details" data-toggle="tab">Detaljer</a></li>
      <li><a href="#tab_graduations" data-toggle="tab">Graderinger</a></li>
      <li><a href="#tab_user" data-toggle="tab">Web-bruker</a></li>
    </ul>
    <div class="tab-content">
      <div class="tab-pane active" id="tab_details">
        <%= render :partial => 'form' %>
      </div>
      <div class="tab-pane" id="tab_graduations">
        <%= render :partial => 'graduations' %>
      </div>
      <div class="tab-pane" id="tab_user">
        <% if @member.user %>
            <%= link_to 'Bruker', edit_user_path(@member.user) %>
        <% else %>
            Ingen bruker!
        <% end %>
      </div>
    </div>

    <%= submit_tag 'Lagre', :id => 'save', :class => 'btn' %>
    <%= back_or_link_to 'Tilbake', :action => :list %>
    <%= link_to 'Til NKF avstemming', :controller => :nkf_members, :action => :comparison, :id => 0 %>
<% end %>

