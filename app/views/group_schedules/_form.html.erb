<% form_for(@group_schedule) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :group_id %><br />
    <%= f.select :group_id, @groups.map{|g| ["#{g.martial_art.name} #{g.name}", g.id]}.sort %>
  </p>
  <p>
    <%= f.label :weekday %><br />
    <%= f.select :weekday, [['Mandag', 1], ['Tirsdag', 2], ['Onsdag', 3], ['Torsdag', 4], ['Fredag', 5], ['Lørdag', 6], ['Søndag', 7]] %>
  </p>
  <p>
    <%= f.label :start_at %><br />
    <%= f.time_select :start_at %>
  </p>
  <p>
    <%= f.label :end_at %><br />
    <%= f.time_select :end_at %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', group_schedules_path %>
