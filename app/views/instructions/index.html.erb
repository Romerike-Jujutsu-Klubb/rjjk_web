<h1>Listing instructions</h1>

<table>
  <tr>
    <th>Group</th>
    <th>Member</th>
    <th>From</th>
    <th>To</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @instructions.each do |instruction| %>
  <tr>
    <td><%= instruction.group_id %></td>
    <td><%= instruction.member_id %></td>
    <td><%= instruction.from %></td>
    <td><%= instruction.to %></td>
    <td><%= link_to 'Show', instruction %></td>
    <td><%= link_to 'Edit', edit_instruction_path(instruction) %></td>
    <td><%= link_to 'Destroy', instruction, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

