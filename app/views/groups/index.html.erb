<h1>Grupper</h1>

<table class="table">
  <tr>
    <th>Navn</th>
    <th>Fra alder</th>
    <th>Til alder</th>
  </tr>

<% for group in @groups %>
  <tr>
    <td><%= link_to edit_group_path(group) do %><%=h group.name %><%end%></td>
    <td><%=h group.from_age %></td>
    <td><%=h group.to_age %></td>
  </tr>
<% end %>
</table>

<br />

<%= detour_to 'Ny gruppe', new_group_path %>

<br />
<br />

<h3>Inaktive grupper</h3>

<table class="table">
  <tr>
    <th>Navn</th>
    <th>Gren</th>
    <th>Fra alder</th>
    <th>Til alder</th>
    <th>Avsluttet</th>
  </tr>

<% for group in @closed_groups %>
  <tr>
    <td><%= link_to edit_group_path(group) do %><%=h group.name %><%end%></td>
    <td><%= link_to edit_martial_art_path(group.martial_art) do %><%=h group.martial_art.name %><%end%></td>
    <td><%=h group.from_age %></td>
    <td><%=h group.to_age %></td>
    <td><%=h group.closed_on %></td>
  </tr>
<% end %>
</table>

