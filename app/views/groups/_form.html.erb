<%= form_for @group do |f| %>
    <%= f.error_messages %>

    <table width="100%">
      <tr>
        <td valign="top">
          <div>
            <%= f.label :name %>
            <%= f.text_field :name %>

            <% if @group.martial_art && @group.martial_art.name != 'Kei Wa Ryu' %>
                <%= f.label :martial_art_id, 'Gren' %>
                <%= f.select :martial_art_id, @martial_arts.map { |ma| [ma.name, ma.id] } %>
            <% end %>
          </div>

          <div style="float: left ; margin-right: 1em">
            <%= f.label :from_age, 'Fra alder' %>
            <%= f.text_field :from_age, :class => 'input-small' %>
          </div>

          <div>
            <%= f.label :to_age, 'Til alder' %>
            <%= f.text_field :to_age, :class => 'input-small' %>
          </div>

          <div style="float: left ; margin-right: 1em">
            <%= f.label :monthly_price, 'Månedspris' %>
            <%= f.text_field :monthly_price, :class => 'input-small' %>
          </div>

          <div>
            <%= f.label :yearly_price, 'Årskontingent' %>
            <%= f.text_field :yearly_price, :class => 'input-small' %>
          </div>

          <div>
            <%= f.label :contract_type, 'Kontraktstype' %>
            <%= f.select :contract, [nil] + @contracts %>
          </div>

          <div style="float: left ; margin-right: 1em">
            <%= f.label :school_breaks, 'Følger skoleåret' %>
            <%= f.check_box :school_breaks, :class => 'input-small' %>
          </div>

          <div style="float: left ; margin-right: 1em">
            <%= f.label :closed_on, 'Avsluttet' %>
            <%= f.datepicker :closed_on, :dateFormat => 'yy-mm-dd', :firstDay => 1, :class => 'input-small' %>
          </div>

        </td>

        <td valign="top">
          <%= f.label :summary, :Sammendrag %>
          <%= f.text_area :summary, :rows => 5, :class => 'input-xlarge' %>

          <%= f.label :description, :Beskrivelse %>
          <%= f.text_area :description, :rows => 7, :class => 'input-xlarge' %>
        </td>
      </tr>
    </table>

    <div>
      <%= f.submit 'Lagre' %>
      <%= link_to 'Semester', edit_group_semester_path(@group.current_semester) if @group.current_semester %>
      <%= link_to 'Neste semester', edit_group_semester_path(@group.next_semester) if @group.next_semester %>
      <%= link_to 'Tilbake', groups_path %>
    </div>

<% end %>
