[Unit]
Description=RJJK web application

[Service]
Type=forking
User=capistrano
Group=capistrano
WorkingDirectory=/u/apps/rjjk_web/current
ExecStart=/u/apps/rjjk_web/current/etc/init.d/rjjk_web start
PIDFile=/u/apps/rjjk_web/shared/pids/server.pid

# Timeout for start up/shut down
TimeoutSec=300

[Install]
WantedBy=graphical.target
